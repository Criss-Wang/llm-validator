{
    "project": "integration-test",
    "task_config": {
        "name": "classification"
    },
    "client_config": {
        "client_name": "local",
        "client_type": "local",
        "model_base_url": "http://localhost:11434/api/chat",
        "model_name": "phi3:medium-128k",
        "model_type": "phi-3-medium",
        "model_options": {
            "temperature": 0,
            "max_tokens": 1024,
            "top_p": 1
        }
    },
    "prompt_config": {
        "name": "test-classification",
        "tenant": "nns",
        "path": "tests/integration/prompts/client_test/classification.yaml",
        "version": 1
    },
    "evaluator_config": {
        "metrics": [
            {
                "type": "accuracy",
                "aspect": "classification-all"
            },
            {
                "type": "latency"
            },
            {
                "type": "cost"
            }
        ]
    },
    "dataset_config": {
        "data_path": "tests/integration/datasets/client_test/test_classification.csv",
        "label_col": "true_label",
        "sanity_test": true
    },
    "controller_config": {
        "save_path": "results/tests",
        "parallelism": 12,
        "use_streaming": false,
        "save_inference": true
    }
}
{
    "project": "llm-validation",
    "task_config": {
        "name": "chunk-validation"
    },
    "client_config": {
        "name": "anthropic",
        "type": "research",
        "model_name": "claude-3-5-sonnet-20240620",
        "model_options": {
            "temperature": 0,
            "max_tokens": 1024,
            "top_p": 1
        }
    },
    "prompt_config": {
        "name": "chunk-validation-v1",
        "path": "prompts/chunk_validation.yaml",
        "version": 1
    },
    "evaluator_config": {
        "metrics": [
            {
                "type": "accuracy",
                "aspect": "codegen"
            },
            {
                "type": "latency"
            },
            {
                "type": "cost"
            }
        ]
    },
    "dataset_config": {
        "data_path": "datasets/chunk_validation/test.csv",
        "label_col": "true_label"
    },
    "controller_config": {
        "save_path": "results",
        "parallelism": 12,
        "use_streaming": false
    }
}
{
    "project": "code-copilot",
    "inference_only": true,
    "task_config": {
        "name": "code-explanation"
    },
    "client_config": {
        "client_name": "openai",
        "client_type": "research",
        "model_name": "GPT4",
        "model_type": "gpt-4",
        "model_options": {
            "temperature": 0.0,
            "max_tokens": 4096,
            "top_p": 1
        }
    },
    "prompt_config": {
        "name": "code-explain",
        "tenant": "nns",
        "path": "prompts/code_explanation/prompt.yaml",
        "version": 1
    },
    "evaluator_config": {
        "metrics": [
            {
                "type": "latency"
            }
        ]
    },
    "dataset_config": {
        "data_path": "datasets/code_explanation/python_desc_df.csv",
        "sanity_test": false
    },
    "controller_config": {
        "save_path": "results/code_explanation/python",
        "parallelism": 12,
        "use_streaming": false,
        "save_inference": true
    }
}